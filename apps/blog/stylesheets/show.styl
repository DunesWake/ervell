
.BlogPost
  margin-bottom 8em
  line-height line-height-tall
  header.post-header
    collapsed-margins(2em)

    .post-category-title
      margin-bottom: 1.5em

  p, blockquote
    collapsed-margins(2em)

  a
    text-decoration underline

  article
    hr
      background-color colors-gray-border
      border none

    .post-content
      font-size font-size-base
      a[href*="#"]
        vertical-align super
        font-size .8em
        text-decoration none
      img
      iframe
        display block
        vertical-align bottom

      iframe
        max-width 80%
        margin 2em auto

      img
        max-width 100%

      .arena-iframe
        border 1px solid colors-gray-border
        box-shadow 4px 4px 4px colors-gray-background
        height 2150px !important
        margin 4em auto
        padding 1px

        +mobile()
          margin 4em 0
          min-width 100%
        +below(400px)
          height 2000px !important
        +below(380px)
          height 1950px !important
        +below(340px)
          height 1700px !important

      h1, h2, h3, h4, h5, h6
        collapsed-margins(.5em)
      h1
        h1(1.75em)
      h2
        h2(1.5em)
      h3
        h3(1.3em)
      h4
        h4(1.1em)
      h5
        h5()
      h6
        h6()

      figure
        collapsed-margins(4em)
        img
          collapsed-margins(2em)
        figcaption
          font-size font-size-xs

    .post-footnotes
      font-size .9em
      ol
        padding-inline-start 20px
        list-style-type decimal
      hr
        margin 2em 0
        height 1px


  .post-author-bio hr
    margin 3em 0
    height 2px
    background-color colors-gray-border
    border none

.FullScreenCover
  background #00F
  width 100vw
  height 80vh
  position relative

  &__backdrop
    background #000
    position absolute
    top 0
    left 0
    right 0
    bottom 0

    iframe
      width 100%
      height 100%

  &__overlay
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    display flex
    align-items flex-end
    justify-content center
    box-shadow: inset 0px 0px 200px rgba(0,0,255,1)
    
  &__title
    h1
      font-family 'Impact'
      text-transform uppercase
      font-size 10rem
      line-height 1
      text-shadow #00f 1px 0 100px
      -webkit-text-stroke-width: 1px;
      -webkit-text-stroke-color: #00f;
    h4
      position absolute
      left 0
      bottom 40%
      width 100%
    h1, h4
      text-align center
      color white !important
      margin 0
